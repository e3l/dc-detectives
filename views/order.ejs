<!DOCTYPE html>
<html>

<head>
  <title>
    Executive Order: <%= order.title %>
  </title>
  <%- include('header') %>
  <link rel='stylesheet' href='/stylesheets/master.css' />
  <link rel='stylesheet' href='/stylesheets/order.css' />
  <script type='module'>
    import summary from '../javascripts/orderSummary.js'

    window.orderNumber = '<%= order.document_number %>';

    summary();
  </script>
</head>

<body>
  <%- include('menu') %>
  <div id='header'>
    <h1>
      <%= order.title %>
    </h1>
    <h2>
      Signed <%= order.signing_date %> by <%= order.president.name %>
    </h2>
  </div>

  <div id='details'>
    <div id='left'>
      <img id="img" src="/images/<%= order.president.name.replace(" ", "").toLowerCase() %>.jpg">
    </div>

    <div id='right'>
      <div id='summary'></div>
      <iframe id='preview' src='<%= order.public_inspection_pdf_url %>#toolbar=0&navpanes=0'></iframe>
    </div>
  </div>
</body>

</html>